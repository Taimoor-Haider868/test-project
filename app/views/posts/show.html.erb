<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= link_to 'Back', posts_path, class: 'btn btn-secondary my-4' %>
      <div class="card">
        <div class="card-body">
          <h1 class="card-title"><%= @post.title %></h1>
          <p class="card-text"><%= @post.body %></p>
          <% if @post.cover_image.attached? %>
             <%= image_tag @post.cover_image, class: "img-thumbnail" %>
          <%end%>
          <footer class="blockquote-footer mt-5">
            Created by <strong><%= @post.user.email %></strong> on <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </footer>
          <% if current_user.liked_posts.include?(@post) %>
           <%= link_to 'Unlike', post_like_path(@post), method: :delete, data: {
                    turbo_method: :delete,
                  } , class: "btn btn-primary" %>
          <% else %>
      <%= link_to 'Like', post_likes_path(@post), method: :post, data: {    turbo_method: :post,
                   }, class: "btn btn-primary" %>
           <% end %>
        <% if @post.liked_users.count > 0 %>
        <div data-controller="toggler" data-toggler-show-class="show">
          <div class="hidden">
            <button class="btn btn-primary" data-action="click->toggler#toggleVisibility">Click to toggle</button>
          </div>
          <div data-toggler-target="usersContainer">
            <% @post.liked_users.each_with_index do |user, index| %>
              <div <%= "data-toggler-target=hiddenUser" if index > 0 %>>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, class: "rounded-circle", style: "width: 30px; height: 30px" %>
                <% else %>
                  <%= image_tag 'https://static.vecteezy.com/system/resources/thumbnails/010/260/479/small/default-avatar-profile-icon-of-social-media-user-in-clipart-style-vector.jpg', class: "rounded-circle", style: "width: 30px; height: 30px" %> 
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      
<% end %>


        </div>
      </div>

      <div class="mt-3">
        <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' %>
        <%= link_to 'Delete', post_path(@post), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>

  <h2>Comments</h2>
  <div id="comments">
    <% @post.comments.where(parent_id: nil).each do |comment| %>
      <%= render partial: 'comment', locals: { comment: comment } %>
    <% end %>
  </div>

  <h3>Add a Comment</h3>
  <%= form_with(model: [ @post, Comment.new ], local: true) do |form| %>
    <%= render 'error/error', object: @post %>
    <div class="form-group">
      <%= form.text_area :body, class: "form-control", placeholder: "Add a comment..." %>
    </div>
    <%= form.submit "Comment", class: "btn btn-primary" %>
  <% end %>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('[data-toggle="reply-form"]').forEach(function(button) {
        button.addEventListener('click', function(event) {
          event.preventDefault();
          var parentId = button.getAttribute('data-parent-id');
          var form = document.getElementById('reply-form-' + parentId);
          if (form) {
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
          }
        });
      });
    });
  </script>
</div>
